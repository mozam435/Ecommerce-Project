@using Microsoft.AspNetCore.Http;


@model User


@{

}


<div class="container">
    <div class="row">
        <div class="col-4">

            <form asp-action="Login" method="post">
                <h6>Welcome, @Context.Session.GetString("UserName")</h6>
                <div><h1>@ViewBag.error</h1></div>
                <div><h1>@ViewBag.Done</h1></div>
                <div class="form-group">
                    <label asp-for="UserFirstName">User Name</label>
                    <input type="text" asp-for="UserFirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UserPassword">User Name</label>
                    <input type="text" asp-for="UserPassword" class="form-control" />
                </div>

                <input type="submit" class="btn btn-lg btn-success" />
            </form>

        </div>
    </div>
</div>