@model IEnumerable<BootStrap.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.UserFirstName)
            </th>
           
           
            
            
          
            
            <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>
            
          
            <th>@Html.DisplayNameFor(model => model.UserRole)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.UserFirstName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
           
           
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
